<Selenium>

<Screen id="PremiumDisplay" title="Premium Display">
		<Field id="getPremium" type="dynamicHashMap"
			fieldLabel="Premium" pathType="css" screenShot="false">
		</Field>
		<Field id="getGrossPremium" type="dynamicHashMap"
			fieldLabel="GPremium" pathType="css" screenShot="false">
		</Field>
		<Field id="getTransactionType" type="dynamicHashMap"
			fieldLabel="Transaction Type" pathType="xpath" screenShot="false">
		</Field>
		<Field id="getCompanyName" type="dynamicHashMap"
			fieldLabel="Company Name" pathType="xpath" screenShot="false">
		</Field>
		<Field id="radioPayNow" type="radioButton" fieldLabel="payNow"
			pathType="css" screenShot="true">
		</Field>
		<Field id="btnBuy" type="buttonJS" fieldLabel="Buy"
			pathType="css" screenShot="false">
		</Field>
		<Field id="spinner" type="selectSpinner"
			fieldLabel="spinnerWait" screenShot="false">
		</Field>
	</Screen>

	<Screen id="CollectionDetails" title="SSP - Pure Insurance">

		<Field id="allElements" type="assertOrderedListTextEquals"
			fieldLabel="all fields" pathType="css" screenShot="true"
			validMessage="field is present on Collection Details screen"
			errorMessage="field is not present on Collection Details screen">>
		</Field>
		<Field id="fldAccountCode" type="assertGetTextofInput"
			fieldLabel="Company Code" pathType="css" screenShot="false"
			attribute="value" validMessage="Value of account field is correct"
			errorMessage="Value of account field is not correct">>
		</Field>
		<Field id="fldBalance" type="assertGetTextofInput"
			attribute="value" fieldLabel="GPremium" pathType="css"
			screenShot="false" validMessage="Balance amount is correct"
			errorMessage="Balance amount is not correct">
		</Field>
		<Field id="drpBranch" type="assertGetTextofInput"
			attribute="value" fieldLabel="Branch" pathType="css"
			screenShot="false" validMessage="Branch is correct"
			errorMessage="Balance amount is not correct">
		</Field>
		<Field id="drpCurrency" type="assertGetTextofInput"
			attribute="value" fieldLabel="Currency" pathType="css"
			screenShot="false" validMessage="Currency is correct"
			errorMessage="Balance amount is not correct">
		</Field>
		<Field id="drpMediaType" type="select"
			fieldLabel="Select value from dropdown" pathType="css"
			screenShot="false">
		</Field>
		<Field id="drpMediaType" type="tabOut"
			fieldLabel="tabout from Media type field" pathType="css"
			screenShot="false">
		</Field>
		<Field id="" type="selectSpinner" fieldLabel="" pathType=""
			screenShot="false">
		</Field>
		<Field id="drpBank" type="assertDefaultValueOfDropdown"
			fieldLabel="Value of Bank Dropdown" pathType="css" screenShot="true"
			validMessage="Bank is getting defaulted based on selected media type"
			errorMessage="Bank is not getting defaulted based on selected media type">>
		</Field>
		<Field id="chkProduceDocument" type="assertSelectedCheckBox"
			fieldLabel="Produce Document is getting checked based on selected media type"
			pathType="css" screenShot="true"
			validMessage="Produce Document is getting checked based on selected media type"
			errorMessage="Produce Document is not getting checked based on selected media type">>
		</Field>
		<Field id="fldComments" type="assertGetTextofInput"
			fieldLabel="Get Max length of commentbox" attribute="maxlength"
			pathType="css" screenShot="false"
			validMessage="Commentbox length is 100 characters"
			errorMessage="Commentbox length is not 100 characters">
		</Field>



		<Field id="fldMediaReference" type="textfield"
			fieldLabel="Enter value in Media Reference field" pathType="css"
			screenShot="false">
		</Field>
		<Field id="fldTransactionDate" type="textfield"
			fieldLabel="Enter future date" pathType="css" screenShot="false">
		</Field>
		<Field id="drpBank" type="select"
			fieldLabel="Select Bank from dropdown" pathType="css"
			screenShot="false">
		</Field>
		<Field id="fldAmount" type="assertGetTextofInput" attribute="value" fieldLabel="GPremium"
			pathType="css" screenShot="false">
		</Field>
		<Field id="" type="selectSpinner" fieldLabel="" pathType=""
			screenShot="false">
		</Field>
		<Field id="btnOk" type="Button" fieldLabel="Click OK button"
			pathType="css" screenShot="false">
		</Field>

	</Screen>

	<Screen id="TransactionConfirmation"
		title="Transaction Confirmation">
		<Field id="btnYesInDocumentIssuePopup" type="buttonJS"
			fieldLabel="Yes" pathType="css" screenShot="false">
		</Field>
		<Field id="spinner" type="selectSpinner"
			fieldLabel="spinnerWait" screenShot="false">
		</Field>
		<Field id="lnkInfo" type="link" fieldLabel="Info link"
			pathType="css" screenShot="true">
		</Field>
		<Field id="lnkPolicyNo" type="dynamicHashMap"
			fieldLabel="Policynumber" pathType="css" screenShot="false">
		</Field>
		<Field id="lnkCompanyName" type="link" fieldLabel="CompanyName"
			pathType="css" screenShot="false">
		</Field>
		<Field id="spinner" type="selectSpinner"
			fieldLabel="spinnerWait" screenShot="false">
		</Field>
	</Screen>
	<Screen id="CorporateClient" title="Corporate Client Details">
		<Field id="lnkFinance" type="Button"
			fieldLabel="Finance ribbon menu" pathType="css" screenShot="false">
		</Field>
		<Field id="lnkTransactions" type="Button"
			fieldLabel="Transaction ribbon menu" pathType="css"
			screenShot="false">
		</Field>
	</Screen>

	<Screen id="SearchTransactions" title="SSP - Pure Insurance">

		<Field id="fldAccountCode" type="textfield"
			fieldLabel="Company Code" pathType="css" screenShot="false">
		</Field>
		<Field id="chkboxOutstandingTransaction" type="DeSelectCheckbox"
			fieldLabel="uncheck outstanding checkbox" pathType="css"
			screenShot="false">
		</Field>

		<Field id="tabReference" type="link" fieldLabel="Reference Tab"
			pathType="css" screenShot="false">
		</Field>
		<Field id="fldPolicyNumber" type="textfield"
			fieldLabel="Policynumber" pathType="css" screenShot="false">
		</Field>
		<Field id="btnFind" type="Button"
			fieldLabel="Click on Find button" pathType="css" screenShot="false">
		</Field>

		<Field id="O/SAmountAllRow" type="assertGetText"
			fieldLabel="Amount in Client's account" pathType="css"
			screenShot="true"
			validMessage="Amount is posted correctly in client account"
			errorMessage="Amount is not correctly posted in client account">
		</Field>


	</Screen>
</Selenium>