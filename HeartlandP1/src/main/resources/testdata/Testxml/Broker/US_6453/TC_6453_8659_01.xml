<Selenium>

	<Screen id="CollectionDetails" title="SSP - Pure Insurance">

		<Field id="drpReceiptType" type="assertDefaultValueOfDropdown"
			fieldLabel="Value of Receipt Dropdown" pathType="css"
			screenShot="true"
			validMessage="Default value of Receipt dropdown is RECEIPT"
			errorMessage="Default value of Receipt dropdown is not RECEIPT">>
		</Field>
		<Field id="btnCancel" type="Button"
			fieldLabel="Click cancel button" pathType="css" screenShot="false">
		</Field>
	</Screen>
	<Screen id="PremiumDisplay" title="Premium Display">
		<Field id="titleSummaryOfCover" type="assertGetText"
			fieldLabel="Summary of cover title" pathType="css" screenShot="true"
			validMessage="User navigates to SOC screen"
			errorMessage="User doesn't navigates to SOC screen">
		</Field>

		<Field id="btnBuy" type="buttonJS" fieldLabel="Buy"
			pathType="css" screenShot="false">
		</Field>
		<Field id="spinner" type="selectSpinner"
			fieldLabel="spinnerWait" screenShot="false">
		</Field>
	</Screen>
	<Screen id="CollectionDetails" title="SSP - Pure Insurance">
		<Field id="drpMediaType" type="select"
			fieldLabel="Select value from dropdown" pathType="css"
			screenShot="false">
		</Field>
		<Field id="drpMediaType" type="tabOut"
			fieldLabel="tabout from Media type field" pathType="css"
			screenShot="false">
		</Field>
		<Field id="" type="selectSpinner" fieldLabel="" pathType=""
			screenShot="false">
		</Field>

		<Field id="fldMediaReference" type="textfield"
			fieldLabel="Enter value in Media Reference field" pathType="css"
			screenShot="false">
		</Field>
		<Field id="fldTransactionDate" type="textfield"
			fieldLabel="Enter future date" pathType="css" screenShot="false">
		</Field>
		<Field id="drpBank" type="select"
			fieldLabel="Select Bank from dropdown" pathType="css"
			screenShot="false">
		</Field>

		<Field id="fldAmount" type="textfield"
			fieldLabel="EnterLessAmount" pathType="css" screenShot="false">
		</Field>
		<Field id="btnOk" type="Button" fieldLabel="Click OK button"
			pathType="css" screenShot="false">
		</Field>

		<Field id="" type="switchWindow" fieldLabel="Switch window"
			pathType="css" screenShot="false">
		</Field>
		<Field id="drpWriteOffReason" type="select"
			fieldLabel="Select write off reason" pathType="css"
			screenShot="false">
		</Field>
		<Field id="btnYesWriteOffModel" type="Button"
			fieldLabel="Click Yes button" pathType="css" screenShot="false">
		</Field>
		<Field id="" type="returnMainWindow"
			fieldLabel="Switch main window" pathType="css" screenShot="false">
		</Field>

	</Screen>
	<Screen id="TransactionConfirmation"
		title="Transaction Confirmation">
		<Field id="btnYesInDocumentIssuePopup" type="buttonJS"
			fieldLabel="Yes" pathType="css" screenShot="false">
		</Field>
		<Field id="spinner" type="selectSpinner"
			fieldLabel="spinnerWait" screenShot="false">
		</Field>
		<Field id="lnkInfo" type="link" fieldLabel="Info link"
			pathType="css" screenShot="true">
		</Field>
		<Field id="lnkPolicyNo" type="dynamicHashMap"
			fieldLabel="Policynumber" pathType="css" screenShot="false">
		</Field>
		<Field id="lnkCompanyName" type="link" fieldLabel="CompanyName"
			pathType="css" screenShot="false">
		</Field>
		<Field id="spinner" type="selectSpinner"
			fieldLabel="spinnerWait" screenShot="false">
		</Field>
	</Screen>
	<Screen id="CorporateClient" title="Corporate Client Details">
		<Field id="lnkFinance" type="Button"
			fieldLabel="Finance ribbon menu" pathType="css" screenShot="false">
		</Field>
		<Field id="lnkTransactions" type="Button"
			fieldLabel="Transaction ribbon menu" pathType="css"
			screenShot="false">
		</Field>
	</Screen>

	<Screen id="SearchTransactions" title="SSP - Pure Insurance">

		<Field id="fldAccountCode" type="textfield"
			fieldLabel="Company Code" pathType="css" screenShot="false">
		</Field>
		<Field id="chkboxOutstandingTransaction" type="DeSelectCheckbox"
			fieldLabel="uncheck outstanding checkbox" pathType="css"
			screenShot="false">
		</Field>

		<Field id="tabReference" type="link" fieldLabel="Reference Tab"
			pathType="css" screenShot="false">
		</Field>
		<Field id="fldPolicyNumber" type="textfield"
			fieldLabel="Policynumber" pathType="css" screenShot="false">
		</Field>
		<Field id="btnFind" type="Button"
			fieldLabel="Click on Find button" pathType="css" screenShot="false">
		</Field>
		<Field id="actionMenu" type="Button"
			fieldLabel="Click on ellipsis button" pathType="css"
			screenShot="false">
		</Field>
		<Field id="viewAllocation" type="Button"
			fieldLabel="Click on view allocation" pathType="css"
			screenShot="false">
		</Field>
		<Field id="iframeIn" type="switchIframe"
			fieldLabel="Switch frame" pathType="css" screenShot="false">
		</Field>
        <Field id="creditSectionTransRef" type="assertUnorderedListTextEquals"
			fieldLabel="Value of transaction Ref in credit section" pathType="css"
			screenShot="true"
			validMessage="SRP and SWD are correctly displayed in credit section"
			errorMessage="SRP and SWD are not  displayed in credit section">>
		</Field>
		<Field id="creditSectionAllocatedAmount2ndrow" type="assertOrderedListTextEquals"
			fieldLabel="Value of Allocated Amount in credit section" pathType="css"
			screenShot="true"
			validMessage="SWD generated correctly"
			errorMessage="SWD not generated correctly">>
		</Field>

	</Screen>
</Selenium>